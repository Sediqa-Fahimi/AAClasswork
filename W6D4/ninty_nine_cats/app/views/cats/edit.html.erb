<form action="/cats" method="POST">
<input type="hidden" name="_method" value="PATCH">
    <label> Name:
        <input type= "text" name="cat[name]" value=<%= @cat.name%>>
    </label>

    <label> Sex:
        
        <input type= "radio" name="cat[sex]" value="F" <% if @cat.sex == "F" %> checked <% end%>>
        F
        <input type= "radio" name="cat[sex]" value="M"  <% if @cat.sex == "M" %> checked <% end%>>
        M
    </label>

    <label> Color:
        <select name="cat[color]">
            <% Cat.colors.each do |color| %>
                <% if @cat.color == color %>
                    <option value="<%= color %>" selected ><%= color %></option>
                <% else %>
                    <option value="<%= color %>"><%= color %></option>
                <% end %>
            <% end %>
        </select>
    </label>

    <label> Date:
        <input type="date" name="cat[birth_date]" value=<%= @cat.birth_date%>>
    </label>

    <label> Description:
        <textarea name="cat[description]"> <%= @cat.description%></textarea>
    </label>

    <input type="submit" value="update Cat">
</form>